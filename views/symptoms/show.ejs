<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/symptoms/show.css">
<%- include('../partials/nav') %>

<section>
  <h1>Symptom Page for: <%= symptom.name %></h1>
</section>
<% if (symptom.author.equals(user?.profile._id)) { %>
  <a href="/symptoms/<%= symptom._id %>/edit">
    <button class="btn">Edit Symptom</button>
  </a>
  <form action="/symptoms/<%= symptom._id %>?_method=DELETE" method="POST">
    <button class="btn" type="submit">Delete Symptom</button>
  </form>
  <% } %>

