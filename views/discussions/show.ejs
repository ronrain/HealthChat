<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <img src="<%= discussion.author.avatar %>" alt="a picture of the discussion post's author">
  <p>Discussion Posted by <%= user.profile.name %></p>
  <h1>Health Concern: <%= discussion.topic %></h1>
  <h2>Comments about the Health Concern: <%= discussion.content %></h2>
  <h2>My symptoms are: <%= discussion.symptom %></h2>
  <% if (discussion.author.equals(user?.profile._id)) { %>
    <a href="/discussions/<%= discussion._id %>/edit">
      <button class="btn">Edit this Discussion</button>
    </a>
    <form action="/discussions/<%= discussion._id %>?_method=DELETE" method="POST">
      <button class="btn" type="submit">
        Delete this Discussion
      </button>
    </form>
  <% } %>
  <br>
  <h2>Replies</h2>
  <ul>
    <% discussion.replies?.forEach(replies => { %>
      <li>
        <%= discussion.replies.author %>
        <a href="/discussions/<%= discussion._id %>/replies/<%= replies._id %>/editReply">
          <button class="btn">Edit Reply</button>
        </a>
      </li> 
    <% }) %>
  </ul>
  <% if (user) { %>
    <h3>Add a Comment</h3>
    <form action="/discussions/<%= discussion._id %>/replies" method="POST">
      <textarea name="content" placeholder="Reply Here..." ></textarea>
      <br>
      <h4>Check the box below if you are a medicial professional</h4>
      <input type="checkbox" name="isDoctor" >
      <br>
      <button>Add Comment</button>
    </form>
  <% } %>
</section>

<%- include('../partials/footer') %>
