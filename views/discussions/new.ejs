<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/discussions/new.css">
<%- include('../partials/nav') %>

<section>
  <% if (user) { %>
    <h1>Add a Discussion!</h1>
    <form action="/discussions" method="POST">
      <label>
      <h3>Health Concern:</h3> 
        <input type="text" name="topic" autocomplete="off">
      </label>
      <label>
      <h3>Tell Us More: </h3>
        <textarea name="content" autocomplete="off"></textarea>
      </label>
      <h3>Symptoms:</h3>
      <% symptoms.forEach(symptom => { %>
        <div>
          <input type="checkbox" name="symptoms" value="<%= symptom._id %>">
          <label for="symptom-new"><%= symptom.name %></label>
        </div>
      <% }) %>
      <button type="submit">Add Discussion</button>
    </form>
  <% } %>
</section>

<%- include('../partials/footer') %>